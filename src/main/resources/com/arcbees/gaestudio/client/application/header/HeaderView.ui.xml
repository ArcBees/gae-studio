<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.arcbees.gaestudio.client.Resources"/>
    <ui:with type="com.arcbees.gaestudio.client.place.NameTokens" field="nameTokens"/>

    <ui:style>

        .link {
            padding-right: 4px;
        }

        .header {
            line-height: 30px;
            border-bottom: 8px solid #D0E4F6;
        }

    </ui:style>

    <g:HTMLPanel styleName="{style.header}">
        <div class="{resources.styles.fleft}">
            <g:Button ui:field="recording"/>
        </div>

        <div class="{resources.styles.fright}">
            <g:InlineHyperlink targetHistoryToken="{nameTokens.getVisualizer}" styleName="{style.link}">
                Visualizer
            </g:InlineHyperlink>
            <g:InlineHyperlink targetHistoryToken="{nameTokens.getProfiler}" styleName="{style.link}">
                Profiler
            </g:InlineHyperlink>
        </div>

        <div class="{resources.styles.clear}"/>
    </g:HTMLPanel>

</ui:UiBinder>
