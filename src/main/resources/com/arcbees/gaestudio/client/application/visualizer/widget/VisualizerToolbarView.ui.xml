<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.arcbees.gaestudio.client.Resources"/>

    <ui:style>

        .kinds {
            float: left;
        }

    </ui:style>

    <g:HTMLPanel styleName="{resources.styles.toolbar}">
        <g:SimplePanel ui:field="kinds" styleName="{style.kinds}"/>
        <g:HTMLPanel ui:field="buttons" visible="false">
            <g:Button ui:field="refresh">Refresh</g:Button>
            <g:Button ui:field="create">Create</g:Button>
            <g:Button ui:field="edit" enabled="false">Edit</g:Button>
            <g:Button ui:field="delete" enabled="false">Delete</g:Button>
        </g:HTMLPanel>
        <div class="{resources.styles.clear}"/>
    </g:HTMLPanel>

</ui:UiBinder>
