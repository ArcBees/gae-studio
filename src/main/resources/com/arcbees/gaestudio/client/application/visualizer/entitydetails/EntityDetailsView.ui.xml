<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .json {
            font-family: "Consolas", "Menlo", "Bitstream Vera Sans Mono", "Courier New", Courier, monospace !important;
            width: 100%;
            height: 300px;
        }
    </ui:style>

    <g:HTMLPanel>
        <h3>Entity Details</h3>
          <g:Button ui:field="edit">Edit</g:Button>
        <g:TextArea ui:field="entityDetails" styleName="{style.json}" />
    </g:HTMLPanel>

</ui:UiBinder>
