<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.arcbees.gaestudio.client.AppResources"/>
    <ui:with type="com.arcbees.gaestudio.client.place.NameTokens" field="nameTokens"/>

    <ui:style>

        .header {
            border-bottom: 1px solid #45a0ec;
            position: relative;
            line-height: 43px;
        }

        .header img, .header a{
            float: right;
        }

        .header > a {
            display: block;
            padding: 0 20px;
            color: #ffffff;
            text-decoration: none;
            font-size: 18px;
        }

        .logo {
            position: absolute;
            bottom: 0;
            left: 0;
        }


    </ui:style>

    <g:HTMLPanel styleName="{style.header} {resources.sprites.topmenuBg}">
        <g:Image resource="{resources.logo}" styleName="{style.logo}"/>
        <g:InlineHyperlink targetHistoryToken="{nameTokens.getVisualizer}" styleName="{resources.sprites.topmenuBgHover}">
            Visualizer
        </g:InlineHyperlink>
        <g:Image resource="{resources.topmenuSeparator}"/>
        <g:InlineHyperlink targetHistoryToken="{nameTokens.getProfiler}" styleName="{resources.sprites.topmenuBgHover}">
            Profiler
        </g:InlineHyperlink>
        <div class="{resources.styles.clear}"/>
    </g:HTMLPanel>

</ui:UiBinder>
