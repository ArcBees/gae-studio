<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .json {
            font-family: "Consolas", "Menlo", "Bitstream Vera Sans Mono", "Courier New", Courier, monospace !important;
            width: 800px;
            height: 600px;
        }

        .popup {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
        }

        .error {
            margin: 10px;
            padding: 10px;
            border: solid 1px #b8a6a3;
            color: #3a2a25;
            background-color: #e4cfc8;
            border-radius: 5px;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
        }

    </ui:style>

    <g:HTMLPanel>
        <g:PopupPanel visible="false" glassEnabled="true" modal="true" ui:field="popup" styleName="{style.popup}">
            <g:HTMLPanel>
                <h3>Entity Details</h3>
                <g:Button ui:field="save">Save</g:Button>
                <g:Button ui:field="cancel">Cancel</g:Button>
                <hr/>
                <g:Label ui:field="error" styleName="{style.error}"/>
                <g:TextArea ui:field="entityDetails" styleName="{style.json}"/>
            </g:HTMLPanel>
        </g:PopupPanel>
    </g:HTMLPanel>

</ui:UiBinder>
