<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style type="com.arcbees.gaestudio.client.application.visualizer.kindlist.KindListView.MyStyle">
        .kindList {
            position: absolute;
            top: 3em;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: auto;
            padding: 0.5em;
        }

            /* TODO fix this for hover */
        .kind :hover {
            background-color: #d3d3d3;
        }
    </ui:style>

    <g:HTMLPanel>
        <h3>Entity Kinds</h3>
        <g:HTMLPanel ui:field="kindList" styleName="{style.kindList}" />
    </g:HTMLPanel>

</ui:UiBinder>
