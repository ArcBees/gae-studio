<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client"
             xmlns:gsui="urn:import:com.arcbees.gaestudio.client.application.ui">
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with field="debugIds" type="com.arcbees.gaestudio.client.debug.DebugIds"/>
    <ui:style>
        .heading {
            padding-left: 5px;
        }

        .refresh {
            width: 80px;
        }

        .deleteByKind {
            float: left;
        }
    </ui:style>
    <g:HTMLPanel ui:field="panel" visible="false">
        <div class="{style.heading} {resources.styles.pager}">
            <cellview:SimplePager ui:field="pager"/>
            <gsui:ToolbarButton ui:field="refresh" addStyleNames="{style.refresh}"/>
            <g:SimplePanel ui:field="deleteByKind" styleName="{style.deleteByKind}"/>
            <p class="{resources.styles.isDisplaying}">
                Displaying entities of the kind <b class="{resources.styles.kindBold}">Kind</b>
            </p>
            <a class="{resources.styles.unlockButton}" title="Deselect entity" ui:field="deselectEntity"/>
        </div>
        <cellview:CellTable ui:field="entityTable" styleName="{resources.styles.firstTable}"
                            debugId="{debugIds.getEntitiesTables}"/>
    </g:HTMLPanel>
</ui:UiBinder>
