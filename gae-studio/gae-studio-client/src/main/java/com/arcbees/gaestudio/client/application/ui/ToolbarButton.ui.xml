<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .text {
            padding-left: 22px;
        }

        .image {
            position: absolute;
            left: -10px;
            top: -6px;
            width: 100%;
            height: 100%;
            padding: 6px 10px;
        }

        .image img {
            position: absolute;
            top: 10px;
            left: 14px;
        }
    </ui:style>
    <g:HTMLPanel ui:field="button" styleName="{resources.styles.toolbarButton}">
        <div class="{style.image}">
            <g:Image ui:field="image"/>
        </div>
        <g:InlineLabel ui:field="text" styleName="{style.text}"/>
    </g:HTMLPanel>
</ui:UiBinder>
