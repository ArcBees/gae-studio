<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dd='urn:import:com.arcbees.gaestudio.client.application.widget.dropdown'>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .root {
            position: relative;
            height: 46px;
        }

        .delete {
            position: absolute;
            right: 5px;
            top: 7px;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}">
        <dd:Dropdown ui:field="dropdown"/>
        <div ui:field="delete" class="{style.delete} {res.styles.trashSmall}"/>
    </g:HTMLPanel>
</ui:UiBinder>
