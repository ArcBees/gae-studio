<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cui="urn:import:com.arcbees.gaestudio.client.application.ui">
    <ui:with field="nametokens" type="com.arcbees.gaestudio.client.place.NameTokens"/>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>

    <ui:style>
        body, html, .root {
            height: 100%;
        }

        .topBlueBar {
            height: 4px;
        }

        .middleBlueBar {
            height: 75px;
            margin-top: 195px;
        }

        .topBlueBar, .middleBlueBar, .footer {
            background-color: #25aae1;
        }

        .root {
            background-color: #e6e6e6;
        }

        .wrap {
            min-height: 100%;
        }

        .footer {
            position: relative;
            margin-top: -14px;
            height: 14px;
            clear: both;
        }

        .main {
            overflow: auto;
            padding-bottom: 14px;
        }

        .logo {
            margin-top: -168px;
            margin-left: auto;
            margin-right: auto;
            display: block;
            margin-bottom: 10px;
        }

        .errorMessage {
            height: 34px;
            margin-bottom: 14px;

            text-align: center;
            font-size: 1.2em;
            line-height: 34px;

            opacity: 0.0;

            color: white;
            background-color: #ff5400;
        }

        .buttonContainer {
            position: relative;
            margin-top: 20px;
        }

        .ajaxContainer {
            position: absolute;
            right: 0px;
            top: 5px;
            margin-right: -35px;
        }

        .formTitle {
            color: #353535;
            font-size: 20px;
            text-align: center;

            margin-bottom: 25px;
        }

        .separator {
            background-color: #25aae1;
            padding: 5px;
            margin-bottom: 10px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.root}">
        <div class="{style.wrap}">
            <div class="{style.main}">
                <div class="{style.topBlueBar}"/>
                <div class="{style.middleBlueBar}"/>
                <div class="{res.styles.authForm}">
                    <g:Image resource="{res.splashLogo}" addStyleNames="{style.logo}"/>

                    <g:HTMLPanel styleName="{res.styles.authForm}">
                        <h3 class="{style.formTitle}">Welcome !</h3>
                        <div ui:field="errorMessage" class="{style.errorMessage}"/>

                        <div>
                            <g:TextBox ui:field="firstName"/>
                        </div>
                        <div>
                            <g:TextBox ui:field="lastName"/>
                        </div>

                        <div class="{style.separator}"/>

                        <div>
                            <g:TextBox ui:field="registerEmail"/>
                        </div>
                        <div>
                            <g:PasswordTextBox ui:field="registerPassword"/>
                        </div>
                        <div>
                            <g:PasswordTextBox ui:field="confirmPassword"/>
                        </div>
                        <div class="{style.buttonContainer}">
                            <g:Button ui:field="register" text="Create your account" styleName="{res.styles.loginBtn}"/>
                            <div class="{style.ajaxContainer}">
                                <cui:AjaxLoader ui:field="ajaxLoader"/>
                            </div>
                        </div>
                    </g:HTMLPanel>
                </div>
            </div>
        </div>
        <div class="{style.footer}"/>
    </g:HTMLPanel>


</ui:UiBinder>
