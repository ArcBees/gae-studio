<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cui="urn:import:com.arcbees.gaestudio.client.application.ui">
    <ui:with field="nametokens" type="com.arcbees.gaestudio.client.place.NameTokens"/>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>

    <ui:style>
        .buttonContainer {
            position: relative;
            margin-top: 20px;
        }

        .separator {
            background-color: #25aae1;
            padding: 5px;
            margin-bottom: 10px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.authStyles.root}">
        <div class="{res.authStyles.wrap}">
            <div class="{res.authStyles.main}">
                <div class="{res.authStyles.topBlueBar}"/>
                <div class="{res.authStyles.middleBlueBar}"/>
                <div class="{res.styles.authForm}">
                    <g:Image resource="{res.splashLogo}" addStyleNames="{res.authStyles.logo}"/>

                    <div class="{res.styles.authForm}">
                        <h3 class="{res.authStyles.formTitle}">Welcome !</h3>
                        <div ui:field="errorMessage" class="{res.authStyles.errorMessage}"/>

                        <div>
                            <g:TextBox ui:field="firstName" name="profile.firstName"/>
                        </div>
                        <div>
                            <g:TextBox ui:field="lastName" name="profile.lastName"/>
                        </div>

                        <div class="{style.separator}"/>

                        <div>
                            <g:TextBox ui:field="email" name="email"/>
                        </div>
                        <div>
                            <g:PasswordTextBox ui:field="password" name="password"/>
                        </div>
                        <div>
                            <g:PasswordTextBox ui:field="confirmPassword"/>
                        </div>
                        <div class="{style.buttonContainer}">
                            <g:Button ui:field="register" text="Create your account" styleName="{res.styles.bigBlueBtn}"/>
                            <div class="{res.authStyles.ajaxContainer}">
                                <cui:AjaxLoader ui:field="ajaxLoader"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="{res.authStyles.footer}"/>
    </g:HTMLPanel>
</ui:UiBinder>
