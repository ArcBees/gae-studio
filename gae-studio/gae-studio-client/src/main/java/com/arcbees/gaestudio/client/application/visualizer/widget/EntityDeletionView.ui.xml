<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with field="debugIds" type="com.arcbees.gaestudio.client.debug.DebugIds"/>
    <ui:style>
        h3 {
            margin: 0px 0px 10px 0px;
        }

        .buttonContainer {
            padding-top: 5px;
            margin: 0 auto;
            text-align: center;
        }

        .buttonContainer button {
            margin: 0px;
        }

        .buttonContainer > :first-child {
            margin-right: 6px;
        }

        .container {
            width: 100%;
        }

        .delete {
            cursor: none !important;

            position: absolute;
            margin: 0px !important;

            top: 4px;
            left: 0px;
        }

        .popupContent {
            margin-bottom: 20px;
            min-width: 300px;
            font-size: 1.1em;
        }
    </ui:style>
    <g:PopupPanel visible="false" glassEnabled="true" glassStyleName="{res.styles.glassPanel}" modal="true"
                  styleName="{res.styles.popup}" autoHideEnabled="true">
        <g:HTMLPanel styleName="{style.container}">
            <div>
                <g:Anchor ui:field="close" styleName="{res.styles.close}" text="Ã—"/>
                <div class="{res.styles.clear}"></div>
            </div>
            <div class="{res.styles.popupHeader}">
                <div class="{style.delete} {res.styles.trashSmall}"/>
                Delete
            </div>
            <div class="{style.popupContent}">
                <g:HTML ui:field="message"/>
            </div>
            <div class="{style.buttonContainer}">
                <g:Button ui:field="cancel" text="Cancel" styleName="{res.styles.gray}"/>
                <g:Button ui:field="delete" text="Delete" debugId="{debugIds.getDeleteConfirm}"/>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
