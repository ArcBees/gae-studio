<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .geopts {
            display: table;
            width: 100%;
        }

        .geopts > * {
            display: table-cell;
        }

        .geopts > label {
            width: 100px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.styles.embeddedEntityProperties}">
        <div class="{style.geopts}">
            <Label class="{res.styles.editorLabel}">Latitude</Label>
            <g:DoubleBox ui:field="latitude"/>
        </div>
        <div class="{style.geopts}">
            <Label class="{res.styles.editorLabel}">Longitude</Label>
            <g:DoubleBox ui:field="longitude"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
