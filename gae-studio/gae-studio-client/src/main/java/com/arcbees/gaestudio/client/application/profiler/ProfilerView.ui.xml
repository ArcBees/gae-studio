<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .toolbar {
            height: 100%;
            float: left;
        }

        .whitePanel {
            background-color: white;
        }

        .lightGrey {
            background-color: #ececec;
        }

        .mediumGrey {
            background-color: #e0e0e0;
        }

        .splitLayoutPanel {
            height: 100%;
            overflow: hidden;
        }

        .root {
            position: absolute;
            width: 100%;
            height: 100%;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}">
        <g:SimplePanel ui:field="toolbarPanel" addStyleNames="{style.toolbar}"/>
        <g:SplitLayoutPanel addStyleNames="{style.splitLayoutPanel}">
            <g:west size="300">
                <g:SplitLayoutPanel>
                    <g:center>
                        <g:SimpleLayoutPanel ui:field="requestPanel" addStyleNames="{style.lightGrey}"/>
                    </g:center>
                    <g:south size="350">
                        <g:SimplePanel ui:field="statisticsPanel" addStyleNames="{style.mediumGrey}"/>
                    </g:south>
                </g:SplitLayoutPanel>
            </g:west>
            <g:center>
                <g:SimplePanel ui:field="statementPanel" addStyleNames="{style.whitePanel}"/>
            </g:center>
        </g:SplitLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>
