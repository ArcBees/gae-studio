<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .toolbar {
            height: 100%;
            float: left;
            overflow: hidden;

            background: #232323;
        }

        .right {
            overflow: hidden;
        }

        .whitePanel {
            background-color: white;
        }

        .lightGrey {
            background-color: #ececec;
        }

        .mediumGrey {
            background-color: #e0e0e0;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:SimplePanel ui:field="toolbarPanel" addStyleNames="{style.toolbar}"/>
        <g:DockLayoutPanel addStyleNames="{resources.styles.profilerDockTemporary} {style.right}">
            <g:center>
                <g:SplitLayoutPanel>
                    <g:west size="300">
                        <g:SplitLayoutPanel>
                            <g:center>
                                <g:SimplePanel ui:field="requestPanel" addStyleNames="{style.lightGrey}"/>
                            </g:center>
                            <g:south size="350">
                                <g:SimplePanel ui:field="statisticsPanel" addStyleNames="{style.mediumGrey}"/>
                            </g:south>
                        </g:SplitLayoutPanel>
                    </g:west>
                    <g:center>
                        <g:HTMLPanel>
                            <g:SimplePanel ui:field="statementPanel" addStyleNames="{style.whitePanel}"/>
                        </g:HTMLPanel>
                    </g:center>
                </g:SplitLayoutPanel>
            </g:center>
        </g:DockLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>
