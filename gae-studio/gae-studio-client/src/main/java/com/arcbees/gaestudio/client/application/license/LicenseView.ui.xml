<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cui="urn:import:com.arcbees.gaestudio.client.application.ui">
    
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with field="authRes" type="com.arcbees.gaestudio.client.resources.AuthResources"/>

    <g:HTMLPanel styleName="{res.styles.license}">
        <g:HTMLPanel ui:field="keyEntrySection" styleName="{authRes.styles.authForm}">
            <h3 ui:field="formTitle" class="{authRes.styles.formTitle}"/>
            <div ui:field="errorMessage" class="{authRes.styles.errorMessage}"/>
            <g:TextBox ui:field="key"/>
            <div class="{res.styles.licenseButtonContainer}">
                <g:Button ui:field="register" text="Register" styleName="{res.styles.button}"/>
                <div class="{authRes.styles.ajaxContainer}">
                    <cui:AjaxLoader ui:field="ajaxLoader"/>
                </div>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
