<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cui="urn:import:com.arcbees.gaestudio.client.application.ui">
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>

    <ui:style>
        .main {
            margin-top: 100px;
        }

        .buttonContainer {
            position: relative;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.main}">
        <h4 ui:field="message"/>
        <g:HTMLPanel ui:field="keyEntrySection" styleName="{res.styles.authForm}">
            <h3 ui:field="formTitle" class="{res.authStyles.formTitle}"/>
            <div ui:field="errorMessage" class="{res.authStyles.errorMessage}"/>
            <g:TextBox ui:field="key"/>
            <div class="{style.buttonContainer}">
                <g:Button ui:field="register" text="Register" styleName="{res.styles.button}"/>
                <div class="{res.authStyles.ajaxContainer}">
                    <cui:AjaxLoader ui:field="ajaxLoader"/>
                </div>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
