<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .root {
            overflow-x: auto;
            width: 50%;
            padding-left: 15px;
        }

        .root table {
            width: 100%;
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.styles.entityDetailPanel}" ui:field="panelRoot">
        <div class="{res.styles.entityDetailPanelVisibility}">
            <div class="{res.styles.fullscreenButton}" title="View in full screen" ui:field="fullscreen"/>
            <g:SimplePanel ui:field="root" addStyleNames="{style.root} {res.styles.secondTable} {res.styles.entityPanelTransitions}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
