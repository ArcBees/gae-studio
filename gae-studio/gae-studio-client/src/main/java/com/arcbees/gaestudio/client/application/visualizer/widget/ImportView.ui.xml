<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.arcbees.gaestudio.client.application.ui'>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .container {
            width: 100%;
        }

        .importIcon {
            position: absolute;
            left: 0px;
            top: 4px;
        }

        .buttonContainer {
            padding-top: 5px;
            margin: 0 auto;
            text-align: center;
        }

        .buttonContainer button {
            margin: 0px;
        }

        .importButton {
            margin-right: 0px !important;
            padding: 5px 27px 5px 27px !important;
        }

        .buttonContainer > :first-child {
            margin-right: 6px;
        }

        .popupContent {
            font-size: 1.1em;
            text-align: right;

            width: 250px;
            margin-bottom: 20px;
        }
    </ui:style>
    <g:PopupPanel visible="false" glassEnabled="true" glassStyleName="{res.styles.glassPanel}" modal="true"
                  styleName="{res.styles.popup}" autoHideEnabled="false">
        <g:HTMLPanel styleName="{style.container}">
            <div>
                <g:Anchor ui:field="close" styleName="{res.styles.close}" text="Ã—"/>
                <div class="{res.styles.clear}"></div>
            </div>
            <div class="{res.styles.popupHeader}">
                <div class="{style.importIcon} {res.styles.importSmall}"/>
                Import
            </div>
            <div class="{style.popupContent}">
                <g:SimplePanel ui:field="uploadFormContainer"/>
            </div>
            <div>
                <w:AjaxLoader ui:field="ajaxLoader"/>
            </div>
            <div class="{style.buttonContainer}">
                <g:Button ui:field="cancel" text="Cancel" styleName="{res.styles.gray}"/>
                <g:Button ui:field="upload" enabled="false" text="Upload"
                          styleName="{res.styles.gray} {style.importButton}"/>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
