<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .root {
            color: white;
            text-align: center;

            width: 1em;
            height: 1em;
            margin-top: 5px;
            margin-right: 10px;
            border: 2px solid #25aae1;
            line-height: 1em;

            float: left;
        }

        .root:hover {
            cursor: pointer;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}"/>
</ui:UiBinder>