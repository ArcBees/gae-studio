<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="nametokens" type="com.arcbees.gaestudio.client.place.NameTokens"/>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with field="authRes" type="com.arcbees.gaestudio.client.resources.AuthResources"/>

    <g:HTMLPanel styleName="{authRes.styles.root}">
        <div class="{authRes.styles.wrap}">
            <div class="{authRes.styles.main}">
                <div class="{authRes.styles.topBlueBar}"/>
                <div class="{authRes.styles.middleBlueBar}"/>
                <div class="{authRes.styles.authForm}">
                    <g:Image resource="{res.splashLogo}" addStyleNames="{authRes.styles.logo}"/>
                    <div class="{authRes.styles.authForm}">
                        <h3 class="{authRes.styles.formTitle}">Activate your account</h3>

                        <div class="{authRes.styles.wrapper}">
                            <p class="{authRes.styles.paragraph}">
                                A confirmation was sent to your e-mail address to activate your account
                            </p>

                            <g:InlineHyperlink styleName="{authRes.styles.loginLink}" targetHistoryToken="{nametokens.getAuth}">
                                Go to the login page
                            </g:InlineHyperlink>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="{authRes.styles.footer}"/>
    </g:HTMLPanel>
</ui:UiBinder>
