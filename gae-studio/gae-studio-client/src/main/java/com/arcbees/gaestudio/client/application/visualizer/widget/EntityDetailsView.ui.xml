<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with field="debugIds" type="com.arcbees.gaestudio.client.debug.DebugIds"/>
    <ui:style>
        .json {
            font-family: "Consolas", "Menlo", "Bitstream Vera Sans Mono", "Courier New", Courier, monospace !important;
            font-size: 1.1em;

            width: 550px;
            height: 500px;
            display: block;

            padding: 8px;
            border: 1px solid white;

            background: #757575;
            color: white;
            -webkit-appearance: none;

            -webkit-shadow: inset 0 0 5px 0 rgba(0, 0, 0, 0.6);
            -moz-shadow: inset 0 0 5px 0 rgba(0, 0, 0, 0.6);
            box-shadow: inset 0 0 5px 0 rgba(0, 0, 0, 0.6);

            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;

            transition: all .25s ease;
            -webkit-transition: all .25s ease;
            -moz-transition: all .25s ease;
            -o-transition: all .25s ease;
        }

        .json:focus {
            outline: none;
            -webkit-shadow: inset 0 0 10px 0 rgba(0, 0, 0, 0.6);
            -moz-shadow: inset 0 0 10px 0 rgba(0, 0, 0, 0.6);
            box-shadow: inset 0 0 10px 0 rgba(0, 0, 0, 0.6);
        }

        h3 {
            margin: 0px 0px 10px 0px;
        }

        .error {
            margin: 10px;
            padding: 10px;

            border: solid 1px #b8a6a3;
            color: #3a2a25;
            background-color: #e4cfc8;

            border-radius: 5px;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
        }

        .buttonContainer {
            margin-top: 10px;
            float: right;
        }

        .buttonContainer button {
            margin: 0px;
        }

        .buttonContainer > :first-child {
            margin-right: 6px;
        }

        .editForm {
            overflow-y: auto;
            width: 400px;
            max-height: 500px;
        }
    </ui:style>

    <g:PopupPanel visible="false" glassEnabled="true" glassStyleName="{res.styles.glassPanel}" modal="true"
            styleName="{res.styles.popup}" autoHideEnabled="true">
        <g:HTMLPanel>
            <h3>Entity Details</h3>
            <g:FlowPanel ui:field="errors" styleName="{style.error}"/>

            <g:SimplePanel ui:field="editorPanel" styleName="{style.editForm}" debugId="{debugIds.getEntityEditor}"/>

            <div class="{style.buttonContainer}">
                <g:Button ui:field="save" styleName="{res.styles.toolbarButton}" debugId="{debugIds.getSave}">
                    Save
                </g:Button>
                <g:Button ui:field="cancel" styleName="{res.styles.toolbarButton}">Cancel</g:Button>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
