<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with type="com.arcbees.gaestudio.client.place.NameTokens" field="nameTokens"/>
    <ui:style>
        .header {
            border-bottom: 1px solid #2d9af5;
            position: relative;
            line-height: 36px;
        }

        .menu {
            float: right;
            margin-right: 10px;
        }

        .menu img, .menu a {
            float: left;
        }

        .menu > a:last-of-type {
            margin-right: 1px;
        }

        .menu > a {
            display: block;
            color: white;
            padding: 0 10px;
            text-decoration: none;
            font-size: 18px;
            cursor: pointer;
            position: relative;
            text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
            margin: 7px 10px;
        }

        .logo {
            cursor: pointer;
        }

        .logo:active {
            position: relative;
            top: 1px;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.header} {resources.sprites.topmenuBg}">
        <a href="" class="{style.logo}">
            <g:Image resource="{resources.logo}"/>
        </a>
        <div class="{style.menu}">
            <a href="#{nameTokens.getVisualizer}" class="{resources.styles.toolbarButton}">
                Visualizer
            </a>
            <img src="{resources.topmenuSeparator.getSafeUri}"/>
            <a href="#{nameTokens.getProfiler}" class="{resources.styles.toolbarButton}">
                Profiler
            </a>
        </div>
        <div class="{resources.styles.clear}"/>
    </g:HTMLPanel>
</ui:UiBinder>
