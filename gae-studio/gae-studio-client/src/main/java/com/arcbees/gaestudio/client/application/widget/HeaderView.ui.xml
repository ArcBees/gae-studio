<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with type="com.arcbees.gaestudio.client.place.NameTokens" field="nameTokens"/>
    <ui:style>
        .header {
            position: relative;
        }

        .menu {
            float: right;

            height: 100%;
        }

        .menu img, .menu a {
            float: left;
        }

        .menu > a {
            color: white;
            font-size: 18px;
            text-transform: uppercase;
            text-decoration: none;
            cursor: pointer;

            padding: 0 15px;
            display: block;
            position: relative;

            line-height: 30px;

            text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
        }

        .menu a:hover {
            background: #25aae1;
        }

        .logo {
            cursor: pointer;
        }

        .logo img {
            margin-left: 6px;
            margin-top: 9px;
        }

        .cogplay {
            float: right;
            position: relative;

            padding: 4px;
            margin: 0;
            height: 22px;
        }

        .cogplay:hover {
            cursor: pointer;

            background: white;
        }

        .rightContainer {
            display: inline-block;
            position: absolute;
            top: 36%;
            right: 20px;
            height: 30px;
        }

        .rightContainer ul {
            position: absolute;
            right: 0;

            width: 250%;
            margin: 0;
            padding: 0;

            list-style-type: none;

            background: white;

            font-size: 1.2em;

            display: none;

            z-index: 10000;
        }

        .rightContainer ul li {
            padding: 4px 0 4px 9px;
        }

        .rightContainer ul li:hover {
            background: #dfdfdf;
            cursor: pointer;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.header}">
        <a href="" class="{style.logo}">
            <g:Image resource="{resources.logo}"/>
        </a>
        <div class="{style.rightContainer}">
            <div class="{style.cogplay}" ui:field="cog">
                <g:Image resource="{resources.cogplay}"/>
                <ul ui:field="themes">
                    <li>
                        Clear Theme
                    </li>
                    <li>
                        Dark Theme
                    </li>
                </ul>
            </div>
            <div class="{style.menu}">
                <a href="#{nameTokens.getVisualizer}">
                    Visualizer
                </a>
                <a href="#{nameTokens.getProfiler}">
                    Profiler
                </a>
            </div>
        </div>
        <div class="{resources.styles.clear}"/>
    </g:HTMLPanel>
</ui:UiBinder>
