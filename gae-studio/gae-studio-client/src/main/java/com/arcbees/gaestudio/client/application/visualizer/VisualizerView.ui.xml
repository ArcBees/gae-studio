<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .root {
            overflow: visible;
        }

        .entityPanel {
            width: 100%;
            clear: both;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.root} {resources.styles.noOverflow}">
        <g:SimplePanel ui:field="entityTypesSidebar" addStyleNames="{resources.styles.entityTypeSelector}"/>
        <g:SimplePanel ui:field="toolbar" addStyleNames="{resources.styles.hiddenOverlay}"/>
        <div class="{resources.styles.entityContainer}">
            <g:SimplePanel ui:field="entityListPanel"
                           addStyleNames="{resources.styles.entityListPanel} {resources.styles.hiddenOverlay}"/>
            <div class="{resources.styles.entityDetailPanel}">
                <a class="{resources.styles.backButton}"></a>
                <p class="{resources.styles.isDisplaying}">
                    Displaying entity <b class="{resources.styles.idBold}">ID #</b> of the kind <b class="{resources.styles.kindBold}">Kind</b>
                    <span class="{resources.styles.namespace}">in the namespace <b class="{resources.styles.namespaceBold}">Namespace</b></span>
                </p>
                <g:SimplePanel ui:field="entityDetailsPanel"
                               addStyleNames="{style.entityPanel} {resources.styles.secondTable}"/>
                <g:SimplePanel ui:field="entityDeletionPanel" addStyleNames="{style.entityPanel}"/>
            </div>
        </div>
        <div class="{resources.styles.clear}"/>
    </g:HTMLPanel>
</ui:UiBinder>
