<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with field="debugIds" type="com.arcbees.gaestudio.client.debug.DebugIds"/>
    <ui:style>
        .entityPanel {
            width: 0;
            float: right;

            transition: width .5s ease;
            -webkit-transition: width .5s ease;
            -moz-transition: width .5s ease;
            -o-transition: width .5s ease;
        }

        .toolbar {
            float: left;
            width: 100px;
            height: 100%;
        }

        .root {
            height: 100%;
        }

        .entity {
            overflow: hidden;
        }
    </ui:style>
    <g:HTMLPanel debugId="{debugIds.getVisualizer}" styleName="{style.root}">
        <g:SimplePanel ui:field="entityTypesSidebar" addStyleNames="{resources.styles.entityTypeSelector}"/>
        <g:SimplePanel ui:field="toolbar" styleName="{style.toolbar}"/>
        <div class="{style.entity}">
            <g:SimplePanel ui:field="entityListPanel"
                           addStyleNames="{resources.styles.entityListPanel}"/>
            <g:SimplePanel ui:field="entityDetailsPanel"
                           addStyleNames="{style.entityPanel}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
