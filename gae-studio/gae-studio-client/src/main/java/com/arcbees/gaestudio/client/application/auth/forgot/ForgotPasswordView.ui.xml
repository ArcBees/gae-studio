<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cui="urn:import:com.arcbees.gaestudio.client.application.ui">

    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with field="authRes" type="com.arcbees.gaestudio.client.resources.AuthResources"/>

    <g:HTMLPanel styleName="{authRes.styles.root}">
        <div class="{authRes.styles.wrap}">
            <div class="{authRes.styles.main}">
                <div class="{authRes.styles.topBlueBar}"/>
                <div class="{authRes.styles.middleBlueBar}"/>
                <div class="{authRes.styles.authForm}">
                    <g:Image resource="{res.splashLogo}" addStyleNames="{authRes.styles.logo}"/>

                    <div class="{authRes.styles.authForm}">
                        <h3 class="{authRes.styles.formTitle}">Forgot your password ?</h3>
                        <div ui:field="errorMessage" class="{authRes.styles.errorMessage}"/>
                        <div>
                            <g:TextBox ui:field="email"/>
                        </div>
                        <div class="{authRes.styles.buttonContainer}">
                            <g:Button ui:field="submit" text="Submit" styleName="{res.styles.button}"/>
                            <div class="{authRes.styles.ajaxContainer}">
                                <cui:AjaxLoader ui:field="ajaxLoader"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="{authRes.styles.footer}"/>
    </g:HTMLPanel>
</ui:UiBinder>
