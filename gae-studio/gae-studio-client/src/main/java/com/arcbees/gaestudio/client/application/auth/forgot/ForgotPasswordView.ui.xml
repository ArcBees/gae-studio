<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="nametokens" type="com.arcbees.gaestudio.client.place.NameTokens"/>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>

    <ui:style>
        .submitBtn {
            display: block;
            margin-top: 10px;
            margin-left: 82%;
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.styles.authForm}">
        <div>
            <label>Email</label>
            <g:TextBox ui:field="email"/>
        </div>
        <g:Button ui:field="submit" styleName="{style.submitBtn}" text="Submit"/>
        <div>
            Already have an account?
            <g:InlineHyperlink targetHistoryToken="{nametokens.getAuth}">Login!</g:InlineHyperlink>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
