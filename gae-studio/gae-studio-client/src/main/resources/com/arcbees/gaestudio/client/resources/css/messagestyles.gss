.message {
    border: 0;
    padding: 10px;
    margin: 10px 0;

    position: relative;

    border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
}

.close {
    font-weight: bold;

    padding: 5px;

    top: 5px;
    right: 10px;
    position: absolute;

    cursor: pointer;
}

.success, .error {
    color: #F6F3F3;
}

.success {
    background-color: C_ACTION_SUCCESS;
}

.error {
    background-color: C_ACTION_ERROR;
}
