.message {
    position: relative;
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border: 0;
}

.close {
    position: absolute;
    font-weight: bold;
    top: 5px;
    right: 10px;
    padding: 5px;
    cursor: pointer;
}

.success, .error {
    color: #F6F3F3;
}

.success {
    background-color: C_ACTION_SUCCESS;
}

.error {
    background-color: C_ACTION_ERROR;
}
