.ul {
    background: C_SECONDARY_LIGHT;

    width: 100%;
    margin: 0 0 10px 0;
    border-bottom: 2px solid C_SECONDARY_LIGHT2;

    position: relative;

    -webkit-padding-start: 0px;
    list-style-type: none;
}

ul.openedList {
    background: C_SECONDARY_LIGHT2;

    min-width: 100%;
    width: auto;
    border-bottom: 0;
}

.openedList {
    background: #fff;

    z-index: 10000;
}

.dropDownArrow {
    gwt-sprite: "dropDownArrowUp";
}

.dropDownArrow:hover {
    gwt-sprite: "dropDownArrowRl";
    height: 20px;
}

.ul li {
    font-size: 16px;
    background-color: C_SECONDARY_LIGHT;

    height: 20px;
    line-height: 20px;
    width: 100%;
    padding: 2px 4px;
}

.ul li span {
    color: black;

    display: inline-block;
    overflow: hidden;
    margin-left: 4px;

    text-overflow: ellipsis;
    white-space: nowrap;
}

.ul.openedList li {
    background-color: #fff;
}

.ul.openedList li span {
    width: auto;
}

.ul li:hover {
    background-color: #25aae1;
    color: #fff;
    cursor: pointer;
}

.ul li:hover span {
    color: #fff;
}

.ul:focus {
    outline: none;
}

.dropDownArrow, .dropDownArrow:hover {
    width: 100%;
    background-position-x: calc(100% - 12px);
    background-position-y: 50%;
}

.hiddenLi {
    display: none;
}

.selectedLi {
}
