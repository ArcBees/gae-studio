<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        h3 {
            margin: 0px 0px 10px 0px;
        }

        .buttonContainer {
            padding-top: 5px;
            width: 50%;
            margin: 0 auto;
        }

        .buttonContainer button {
            margin: 0px;
        }

        .buttonContainer > :first-child {
            margin-right: 6px;
        }
    </ui:style>
    <g:PopupPanel visible="false" glassEnabled="true" glassStyleName="{res.styles.glassPanel}" modal="true"
                  styleName="{res.styles.popup}" autoHideEnabled="true">
        <g:HTMLPanel>
            <h3>Are you sure you want to delete this Entity?</h3>
            <div class="{style.buttonContainer}">
                <g:Button ui:field="delete" styleName="{res.styles.toolbarButton}">Delete</g:Button>
                <g:Button ui:field="cancel" styleName="{res.styles.toolbarButton}">Cancel</g:Button>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
