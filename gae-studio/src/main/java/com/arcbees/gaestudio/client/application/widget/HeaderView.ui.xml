<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:with type="com.arcbees.gaestudio.client.place.NameTokens" field="nameTokens"/>
    <ui:style>
        .header {
            border-bottom: 1px solid #2D9AF5;
            position: relative;
            line-height: 50px;
        }

        .header img, .header a {
            float: right;
        }

        .header > a:first-of-type {
            margin-right: 1px;
        }

        .header > a {
            display: block;
            color: #ffffff;
            padding: 0 20px;
            text-decoration: none;
            font-size: 18px;
            cursor: pointer;
            position: relative;
        }

        .header > a:before, .header > a:after {
            content: attr(title);
            position: absolute;
            top: 0;
            left: 0;
            display: block;
            width: auto;
            height: 50px;
            padding: 0 20px;

            -webkit-transition: all 275ms cubic-bezier(0.400, 0.135, 0.145, 1); /* older webkit */
            -webkit-transition: all 275ms cubic-bezier(0.400, 0.135, 0.145, 1.005);
            -moz-transition: all 275ms cubic-bezier(0.400, 0.135, 0.145, 1.005);
            -ms-transition: all 275ms cubic-bezier(0.400, 0.135, 0.145, 1.005);
            -o-transition: all 275ms cubic-bezier(0.400, 0.135, 0.145, 1.005);
            transition: all 275ms cubic-bezier(0.400, 0.135, 0.145, 1.005); /* custom */
        }

        .header > a:before {
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);

            -webkit-transform: rotateX(0deg) translateZ(25px);
            -moz-transform: rotateX(0deg) translateZ(25px);
            -o-transform: rotateX(0deg) translateZ(25px);
            transform: rotateX(0deg) translateZ(25px);
        }

        .header > a:hover:before, .header > a:active:before {
            -webkit-box-shadow: inset 0 -9px 22px -8px rgba(255, 255, 255, 0.3);
            -moz-box-shadow: inset 0 -9px 22px -8px rgba(255, 255, 255, 0.3);
            box-shadow: inset 0 -9px 22px -8px rgba(255, 255, 255, 0.3);
            -webkit-transform: rotateX(90deg) translateZ(25px);
            -moz-transform: rotateX(90deg) translateZ(25px);
            -o-transform: rotateX(90deg) translateZ(25px);
            transform: rotateX(90deg) translateZ(25px);
        }

        .header > a:after {
            text-shadow: 0px 0px 3px rgba(0, 0, 0, 0.25);

            -webkit-transform: rotateX(-90deg) translateZ(25px);
            -moz-transform: rotateX(-90deg) translateZ(25px);
            -o-transform: rotateX(-90deg) translateZ(25px);
            transform: rotateX(-90deg) translateZ(25px);

            -webkit-box-shadow: inset 0 3px 25px -9px rgba(0, 0, 0, 0.5);
            -moz-box-shadow: inset 0 3px 25px -9px rgba(0, 0, 0, 0.5);
            box-shadow: inset 0 3px 25px -9px rgba(0, 0, 0, 0.5);
        }

        .header > a:hover:after, .header > a:active:after {
            -webkit-transform: rotateX(0deg) translateZ(25px);
            -moz-transform: rotateX(0deg) translateZ(25px);
            -o-transform: rotateX(0deg) translateZ(25px);
            transform: rotateX(0deg) translateZ(25px);
        }

        .header > a:active:after {
            -webkit-box-shadow: inset 0 1px 22px -3px rgba(0, 0, 0, 0.55);
            -moz-box-shadow: inset 0 1px 22px -3px rgba(0, 0, 0, 0.55);
            box-shadow: inset 0 1px 22px -3px rgba(0, 0, 0, 0.55);
        }

        .logo {
            position: absolute;
            bottom: 0;
            left: 0;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.header} {resources.sprites.topmenuBg}">
        <g:Image resource="{resources.logo}" styleName="{style.logo}"/>
        <a href="#{nameTokens.getVisualizer}" class="{resources.sprites.topmenuBgHover} visualizer" title="Visualizer">
            Visualizer
        </a>
        <img src="{resources.topmenuSeparator.getSafeUri}"/>
        <a href="#{nameTokens.getProfiler}" class="{resources.sprites.topmenuBgHover} profiler" title="Profiler">
            Profiler
        </a>
        <div class="{resources.styles.clear}"/>
    </g:HTMLPanel>
</ui:UiBinder>
