<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resources" type="com.arcbees.gaestudio.client.resources.AppResources"/>
    <ui:style>
        .entityListPanel {
            float: left;
        }

        .root {
            overflow: hidden;
        }

        .entityDetailsPanel {
            margin-top: 93px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.root}">
        <g:SimplePanel ui:field="entityTypesSidebar" addStyleNames="{resources.styles.entityTypeSelector}"/>
        <g:SimplePanel ui:field="toolbar" addStyleNames="{resources.styles.hiddenOverlay}"/>
        <g:SimplePanel ui:field="entityListPanel" addStyleNames="{style.entityListPanel} {resources.styles.hiddenOverlay}"/>
        <g:SimplePanel ui:field="entityDetailsPanel" addStyleNames="{style.entityDetailsPanel}"/>
        <div class="{resources.styles.clear}"/>
    </g:HTMLPanel>
</ui:UiBinder>
